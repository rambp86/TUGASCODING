#include <stdio.h>
int main()
{
	//Dibagian scanf variabel a,b nya didepannya ditambahkan &//
	int  a , b;
	printf("Masukan dua angka: ");
	scanf("%d %d", &a,&b);
	
	//Dibagian int sum lupa dikasih tanda ;// 
	int sum = a + b;
	printf("Penjumlahan: %d\n", sum);
	
	int difference = a - b;
	printf("Pengurangan: %d\n", difference);
	
	int product = a * b;
	printf("Perkalian: %d\n", product);
	
	if(b !=0) {
		float division = a / b;
		printf("Pembagiam: %2.f\n", division);
	} else {
		printf("Error: Pembagian dengan nol\n");
	}

	return 0;
}
